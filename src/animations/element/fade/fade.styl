// fade-normal
@keyframes fadeNormalIn {
  from {
    opacity 0

  }

  to {
    opacity 1
  }

}

@keyframes fadeNormalOut {
  from {
    opacity 1
  }

  to {
    opacity 0
  }
}
//fade-down
/***********************************/

@keyframes fadeDownIn {
  0% {
    opacity 0
    transform translate3d(0, -100%, 0)
  }

  100% {
    opacity 1
    transform none
  }
}


@keyframes fadeDownOut {
  0% {
    opacity 1
  }

  100% {
    opacity 0
    transform translate3d(0, 100%, 0)
  }
}
